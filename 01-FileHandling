path = 'file.txt'
try:
    data = "This is appended text"
    file = open(path, 'r')
    file.write(data)
    print(file.tell())
    file.seek(10)
    print( file.tell( ) )
    # print(file.read())
    # file.seek(-3, 2)     Use 0 (beg), 1(curr), 2(end) options for 2nd argument
    # print( file.tell( ) )
    print(file.read() + '...')
except io.UnsupportedOperation as err:
    print(err)
except FileNotFoundError as err:
    print(err)
except BaseException as err:
    print(err)
finally:
    if os.path.exists(path):
        file.close()
        print("Closed the file")